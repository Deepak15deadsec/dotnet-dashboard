@page
@model TablePageModel
@{
    ViewData["Title"] = "Table Page";
}

<h2>Data Table</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>

<div class="container mt-5 bg-primary p-4">
    
    <form method="post">
          <table class="table table-borderless w-100">
            <colgroup>
                <col style="width: 50%;" />
                <col style="width: 50%;" />
            </colgroup>
            <tbody>
                <tr>
                    <td class="text-white">First Name</td>
                    <td>
                        <input type="text" class="form-control" id="firstName" name="firstName" required />
                    </td>
                </tr>
                <tr>
                    <td class="text-white">Last Name</td>
                    <td>
                        <input type="text" class="form-control" id="lastName" name="lastName" required />
                    </td>
                </tr>
                <tr>
                    <td class="text-white">Email</td>
                    <td>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </td>
                </tr>
                <tr>
                    <td class="text-white">Phone Number</td>
                    <td>
                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required />
                    </td>
                </tr>
                <tr>
                    <td class="text-white">Address</td>
                    <td>
                        <input type="text" class="form-control" id="address" name="address" required />
                    </td>
                </tr>
              
            </tbody>
        </table>
          <tr>
                    <td colspan="2" class="text-center">
                        <button type="submit" class="btn btn-light">Submit</button>
                    </td>
                </tr>
    </form>
</div>