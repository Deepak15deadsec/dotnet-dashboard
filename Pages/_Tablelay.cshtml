<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .submenu {
            display: none;
            margin-left: 20px; /* Adjust the margin for child submenus */
        }

        .submenu.show {
            display: block;
        }

        /* Style for the table within submenu */
  

     
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-toggle="submenu1">Submenu 1</a>
                                <ul class="navbar-nav submenu" id="submenu1">
                                    <!-- Dynamic generation of submenu items using JavaScript -->
                                </ul>
                            </li>
                            <!-- Add more menu items or dynamic submenus as needed -->
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Simulated dynamic data from the backend for Submenu 1
        var dynamicDataSubmenu1 = [
            { name: 'Submenu 1.1', url: '/submenu1/child1' },
            { name: 'Submenu 1.2', url: '/submenu1/child2' },
               { name: 'Submenu 1.3', url: '/submenu1/child2' },
            // Add more dynamic data as needed
        ];

        var submenuContainer1 = document.getElementById('submenu1');

        // Create a table for submenu 1
        var table = document.createElement('table');
        table.className = 'submenu-table';

        // Populate Submenu 1 dynamically based on data
        dynamicDataSubmenu1.forEach(function (item) {
            var tr = document.createElement('tr');
            var td = document.createElement('td');

            var a = document.createElement('a');
            a.className = 'nav-link';
            a.href = item.url;
            a.textContent = item.name;

            td.appendChild(a);
            tr.appendChild(td);
            table.appendChild(tr);
        });

        // Append the table to the submenu container
        submenuContainer1.appendChild(table);

        // Set up event listener for submenu toggle
        var submenuToggle1 = document.querySelector('[data-toggle="submenu1"]');
        submenuToggle1.addEventListener('click', function (e) {
            e.preventDefault();

            // Toggle the visibility of the submenu
            submenuContainer1.classList.toggle('show');
        });
    });
</script>
</body>
</html>